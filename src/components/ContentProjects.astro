---
import SocialIcon from "./SocialIcon.astro";

interface Social {
  icon: "github" | "linkedIn" | "twitter" | "email" | "xing" | "link";
  link: string;
  title?: string;
}
interface Project {
  name: string;
  description: string;
  link: {
    url?: string;
    target?: string;
    title?: string;
    buttonLabel?: string;
  };
  repo: {
    url?: string;
    icon: "github" | "linkedIn" | "twitter" | "email" | "resume";
  };
}

const projects: Project[] = [
  {
    name: "Mystore",
    description:
      "A full-stack e-commerce application with a clean,responsive UI for an intuitive shopping experience",
    link: {
      url: "https://mystore-client.vercel.app/",
    },
    repo: {
      url: "https://github.com/saicharanars/mystore",
      icon: "github",
    },
  },
  {
    name: "Job Huntly",
    description:
      "A modern job board platform designed for seamless  interaction between job seekers and employers",
    link: {
      url: "https://jobboard-4vpn.vercel.app/",
    },
    repo: {
      url: "https://github.com/saicharanars/jobboard",
      icon: "github",
    },
  },
  {
    name: "Hospital resource management",
    description:
      "A full-stack platform for real-time tracking and optimization of hospital resources.",
    link: {},
    repo: {
      url: "https://github.com/saicharanars/hospital-resource-management",
      icon: "github",
    },
  },
  {
    name: "Expense Tracker",
    description:
      "A full-stack application for secure expense management and real-time financial insights.",
    link: {
      url: "https://techpoint.de/",
    },
    repo: {
      url: "https://github.com/saicharanars/expense-tracker",
      icon: "github",
    },
  },
  {
    name: "Group Talk",
    description:
      "A Dynamic group chat platform enhanced by real-time messaging capabilities.",
    link: {
      url: "https://techpoint.de/",
    },
    repo: {
      url: "https://github.com/saicharanars/group-talk",
      icon: "github",
    },
  },
];
---

<div>
  <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      projects.map((project) => (
        <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">
          <h3 class="text-xl font-semibold text-white mb-2">{project.name}</h3>

          <p class="text-gray-400">{project.description}</p>
          <div class="grid grid-cols-2 gap-4">
            <div>
              {project.link?.url ? (
                <div class="flex flex-wrap gap-3 mt-6 justify-between">
                  <a
                    href={project.link.url}
                    target="_blank"
                    title={project.link.url}
                    rel="noopener noreferrer"
                    class="flex items-center justify-center w-10 h-10 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5"
                  >
                    <SocialIcon icon={"link"} />
                  </a>
                </div>
              ) : null}
            </div>

            <div>
              {project.repo?.url ? (
                <div class="flex flex-wrap gap-3 mt-6 justify-between">
                  <a
                    href={project.repo.url}
                    target="_blank"
                    title={project.name}
                    rel="noopener noreferrer"
                    class="flex items-center justify-center w-10 h-10 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5"
                  >
                    <SocialIcon icon={project.repo.icon} />
                  </a>
                </div>
              ) : null}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
